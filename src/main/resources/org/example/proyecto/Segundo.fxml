<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #EAD7D1;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyecto.SegundoController">

   <!-- Menú lateral para categorías -->
   <left>
      <VBox alignment="CENTER" prefWidth="150.0" spacing="10.0">
         <Hyperlink onAction="#cambiarABebidas" text="Bebidas">
            <font>
               <Font name="Segoe Script Bold" size="14.0" />
            </font></Hyperlink>
         <Hyperlink onAction="#cambiarAPostres" text="Postres">
            <font>
               <Font name="Segoe Script Bold" size="14.0" />
            </font></Hyperlink>
         <Hyperlink onAction="#cambiarATapas" text="Tapas">
            <font>
               <Font name="Segoe Script Bold" size="14.0" />
            </font></Hyperlink>
         <Hyperlink onAction="#cambiarAPrimeros" style="-fx-font-weight: bold;" text="Primeros">
            <font>
               <Font name="Segoe Script" size="14.0" />
            </font></Hyperlink>
         <Hyperlink layoutX="47.0" layoutY="359.0" onAction="#cambiarAEspeciales" style="-fx-font-weight: bold;" text="Especiales">
            <font>
               <Font name="Segoe Script" size="14.0" />
            </font>
         </Hyperlink>
      </VBox>
   </left>

   <!-- Contenido del menú -->
   <center>
      <ScrollPane fitToWidth="true" prefHeight="600.0">
         <content>
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>

               <!-- Hamburguesa Clásica -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label style="-fx-font-size: 20px;" text="Hamburguesa Clásica" />
                     <Label style="-fx-font-size: 16px;" text="10.00€" />
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosClasica" onAction="#decrementarCantidad" text="-" />
                     <TextField fx:id="txtCantidadClasica" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasClasica" onAction="#incrementarCantidad" text="+" />
                  </HBox>
               </HBox>

               <!-- Hamburguesa Doble con Queso -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label style="-fx-font-size: 20px;" text="Hamburguesa Doble con Queso" />
                     <Label style="-fx-font-size: 16px;" text="12.50€" />
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosDoble" onAction="#decrementarCantidad" text="-" />
                     <TextField fx:id="txtCantidadDoble" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasDoble" onAction="#incrementarCantidad" text="+" />
                  </HBox>
               </HBox>

               <!-- Merluza en Salsa Verde -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label style="-fx-font-size: 20px;" text="Merluza en Salsa Verde" />
                     <Label style="-fx-font-size: 16px;" text="15.00€" />
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosMerluza" onAction="#decrementarCantidad" text="-" />
                     <TextField fx:id="txtCantidadMerluza" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasMerluza" onAction="#incrementarCantidad" text="+" />
                  </HBox>
               </HBox>

               <!-- Filete de Lomo con Patatas -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label style="-fx-font-size: 20px;" text="Filete de Lomo con Patatas" />
                     <Label style="-fx-font-size: 16px;" text="14.00€" />
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosLomo" onAction="#decrementarCantidad" text="-" />
                     <TextField fx:id="txtCantidadLomo" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasLomo" onAction="#incrementarCantidad" text="+" />
                  </HBox>
               </HBox>

            </VBox>
         </content>
      </ScrollPane>
   </center>
   <top>
      <Label text="Titulo" BorderPane.alignment="CENTER">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
   </top>
</BorderPane>
