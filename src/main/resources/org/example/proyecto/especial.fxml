<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #EAD7D1;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyecto.SegundoController">

   <!-- Menú lateral para categorías -->
   <left>
      <VBox alignment="CENTER" prefWidth="150.0" spacing="10.0">
         <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         <Hyperlink onAction="#cambiarASegundos" text="Segundos">
            <tooltip>
               <Tooltip text="SDGGSGSGAEWGRAEGAERGAERGAERG 1" />
            </tooltip>
            <font>
               <Font name="Segoe Script Bold" size="14.0" />
            </font></Hyperlink>
         <Hyperlink onAction="#cambiarAPostres" text="Postres">
            <font>
               <Font name="Segoe Script Bold" size="14.0" />
            </font></Hyperlink>
         <Hyperlink onAction="#cambiarATapas" text="Tapas">
            <font>
               <Font name="Segoe Script Bold" size="14.0" />
            </font></Hyperlink>
         <Hyperlink onAction="#cambiarAPrimeros" style="-fx-font-weight: bold;" text="Primeros">
            <font>
               <Font name="Segoe Script" size="14.0" />
            </font></Hyperlink>
      </VBox>
   </left>


   <!-- Contenido del menú -->
   <center>
      <ScrollPane fitToWidth="true" prefHeight="600.0">
         <content>
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>

               <!-- Hamburguesa Clásica -->
               <HBox alignment="TOP_CENTER" prefHeight="86.0" prefWidth="475.0" spacing="10.0">
                  <VBox alignment="TOP_CENTER">
                     <Label text="Champiñones al ajillo">
                        <font>
                           <Font name="Segoe Script" size="20.0" />
                        </font></Label>
                     <Label text="10.00€">
                        <font>
                           <Font name="Segoe Script" size="16.0" />
                        </font></Label>
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosClasica" onAction="#decrementarCantidad" text="-" >
                        <tooltip>
                           <Tooltip text="Quitar 1" />
                        </tooltip>
                     </Button>
                     <TextField fx:id="txtCantidadClasica" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasClasica" onAction="#incrementarCantidad" text="+" >
                        <tooltip>
                           <Tooltip text="Añadir 1" />
                        </tooltip>
                     </Button>
                  </HBox>
               </HBox>

               <!-- Hamburguesa Doble con Queso -->
               <HBox alignment="TOP_CENTER" prefHeight="99.0" prefWidth="475.0" spacing="10.0">
                  <VBox alignment="TOP_CENTER">
                     <Label text="Berenjenas fritas con miel">
                        <font>
                           <Font name="Segoe Script" size="20.0" />
                        </font></Label>
                     <Label text="12.50€">
                        <font>
                           <Font name="Segoe Script" size="16.0" />
                        </font></Label>
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosDoble" onAction="#decrementarCantidad" text="-">
                        <tooltip>
                           <Tooltip text="Quitar 1" />
                        </tooltip>
                     </Button>
                     <TextField fx:id="txtCantidadDoble" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasDoble" onAction="#incrementarCantidad" text="+">
                        <tooltip>
                           <Tooltip text="Añadir 1" />
                        </tooltip>
                     </Button>
                  </HBox>
               </HBox>

               <!-- Merluza en Salsa Verde -->
               <HBox alignment="TOP_CENTER" prefHeight="108.0" prefWidth="475.0" spacing="10.0">
                  <VBox alignment="TOP_CENTER" prefWidth="366.0">
                     <Label text="Boquerones en vinagre">
                        <font>
                           <Font name="Segoe Script" size="20.0" />
                        </font></Label>
                     <Label text="15.00€">
                        <font>
                           <Font name="Segoe Script" size="16.0" />
                        </font></Label>
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosMerluza" onAction="#decrementarCantidad" text="-">
                        <tooltip>
                           <Tooltip text="Quitar 1" />
                        </tooltip>
                     </Button>
                     <TextField fx:id="txtCantidadMerluza" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasMerluza" onAction="#incrementarCantidad" text="+">
                        <tooltip>
                           <Tooltip text="Añadir 1" />
                        </tooltip>
                     </Button>
                  </HBox>
               </HBox>

               <!-- Filete de Lomo con Patatas -->
               <HBox alignment="TOP_CENTER" prefHeight="110.0" prefWidth="475.0" spacing="10.0">
                  <VBox alignment="TOP_CENTER">
                     <Label text="Rabas de calamar">
                        <font>
                           <Font name="Segoe Script" size="20.0" />
                        </font></Label>
                     <Label text="14.00€">
                        <font>
                           <Font name="Segoe Script" size="16.0" />
                        </font></Label>
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosLomo" onAction="#decrementarCantidad" text="-" >
                        <tooltip>
                           <Tooltip text="Quitar 1" />
                        </tooltip>
                     </Button>
                     <TextField fx:id="txtCantidadLomo" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasLomo" onAction="#incrementarCantidad" text="+" >
                        <tooltip>
                           <Tooltip text="Añadir 1" />
                        </tooltip>
                     </Button>

                  </HBox>
               </HBox>

            </VBox>
         </content>
      </ScrollPane>
   </center>
   <top>
      <ImageView fitHeight="126.0" fitWidth="275.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="TOP_RIGHT">
         <image>
            <Image url="@../../../Recursos_Gráficos/Fuentes/Ejemplo_Logo-removebg-preview.png" />
         </image>
         <BorderPane.margin>
            <Insets right="100.0" />
         </BorderPane.margin>
      </ImageView>
   </top>
</BorderPane>
