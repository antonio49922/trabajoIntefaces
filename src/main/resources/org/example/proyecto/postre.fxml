<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.proyecto.PostreController"
            style="-fx-background-color: #EAD7D1;">

   <!-- Menú lateral para categorías -->
   <left>
      <VBox prefWidth="150.0" spacing="10.0" alignment="CENTER">
         <Label text="Categorías" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
         <Button text="Primeros" onAction="#cambiarAPrimeros"/>
         <Button text="Segundos" onAction="#cambiarASegundos"/>
         <Button text="Tapas" onAction="#cambiarATapas"/>
         <Button text="Bebidas" onAction="#cambiarABebidas"/>
      </VBox>
   </left>

   <!-- Contenido del menú -->
   <center>
      <ScrollPane fitToWidth="true" prefHeight="600.0">
         <content>
            <VBox spacing="10.0">
               <padding>
                  <Insets top="10" right="10" bottom="10" left="10"/>
               </padding>

               <!-- Tiramisú -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label text="Tiramisú" style="-fx-font-size: 20px;"/>
                     <Label text="5.00€" style="-fx-font-size: 16px;"/>
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosTiramisu" text="-" onAction="#decrementarCantidad"/>
                     <TextField fx:id="txtCantidadTiramisu" text="0" prefWidth="40" alignment="CENTER" editable="false"/>
                     <Button fx:id="btnMasTiramisu" text="+" onAction="#incrementarCantidad"/>
                  </HBox>
               </HBox>

               <!-- Flan Casero -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label text="Flan Casero" style="-fx-font-size: 20px;"/>
                     <Label text="4.50€" style="-fx-font-size: 16px;"/>
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosFlan" text="-" onAction="#decrementarCantidad"/>
                     <TextField fx:id="txtCantidadFlan" text="0" prefWidth="40" alignment="CENTER" editable="false"/>
                     <Button fx:id="btnMasFlan" text="+" onAction="#incrementarCantidad"/>
                  </HBox>
               </HBox>

               <!-- Crepe de Chocolate -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label text="Crepe de Chocolate" style="-fx-font-size: 20px;"/>
                     <Label text="6.00€" style="-fx-font-size: 16px;"/>
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosCrepe" text="-" onAction="#decrementarCantidad"/>
                     <TextField fx:id="txtCantidadCrepe" text="0" prefWidth="40" alignment="CENTER" editable="false"/>
                     <Button fx:id="btnMasCrepe" text="+" onAction="#incrementarCantidad"/>
                  </HBox>
               </HBox>

               <!-- Arroz con Leche -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label text="Arroz con Leche" style="-fx-font-size: 20px;"/>
                     <Label text="4.00€" style="-fx-font-size: 16px;"/>
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosArroz" text="-" onAction="#decrementarCantidad"/>
                     <TextField fx:id="txtCantidadArroz" text="0" prefWidth="40" alignment="CENTER" editable="false"/>
                     <Button fx:id="btnMasArroz" text="+" onAction="#incrementarCantidad"/>
                  </HBox>
               </HBox>

            </VBox>
         </content>
      </ScrollPane>
   </center>

   <!-- Botones de navegación -->
   <bottom>
      <HBox alignment="CENTER" spacing="20">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
         <Button fx:id="btnVolver" text="Volver al menú" onAction="#volverMenu"/>
         <Button fx:id="btnPagar" text="Pagar"/>
      </HBox>
   </bottom>
</BorderPane>
