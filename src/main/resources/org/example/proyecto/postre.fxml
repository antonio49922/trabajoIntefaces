<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #EAD7D1;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyecto.PostreController">

   <!-- Menú lateral para categorías -->
   <left>
      <VBox alignment="CENTER" prefWidth="150.0" spacing="10.0">
         <Hyperlink onAction="#cambiarASegundos" text="Segundos">
            <font>
               <Font name="Segoe Script Bold" size="14.0" />
            </font></Hyperlink>
         <Hyperlink onAction="#cambiarABebidas" text="Bebidas">
            <font>
               <Font name="Segoe Script Bold" size="14.0" />
            </font></Hyperlink>
         <Hyperlink onAction="#cambiarATapas" text="Tapas">
            <font>
               <Font name="Segoe Script Bold" size="14.0" />
            </font></Hyperlink>
         <Hyperlink onAction="#cambiarAPrimeros" style="-fx-font-weight: bold;" text="Primeros">
            <font>
               <Font name="Segoe Script" size="14.0" />
            </font></Hyperlink>
         <Hyperlink layoutX="47.0" layoutY="359.0" onAction="#cambiarAEspeciales" style="-fx-font-weight: bold;" text="Especiales">
            <font>
               <Font name="Segoe Script" size="14.0" />
            </font>
         </Hyperlink>
      </VBox>
   </left>


   <!-- Contenido del menú -->
   <center>
      <ScrollPane fitToWidth="true" prefHeight="600.0">
         <content>
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>

               <!-- Tiramisú -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label style="-fx-font-size: 20px;" text="Tiramisú" />
                     <Label style="-fx-font-size: 16px;" text="5.00€" />
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosTiramisu" onAction="#decrementarCantidad" text="-" />
                     <TextField fx:id="txtCantidadTiramisu" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasTiramisu" onAction="#incrementarCantidad" text="+" />
                  </HBox>
               </HBox>

               <!-- Flan Casero -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label style="-fx-font-size: 20px;" text="Flan Casero" />
                     <Label style="-fx-font-size: 16px;" text="4.50€" />
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosFlan" onAction="#decrementarCantidad" text="-" />
                     <TextField fx:id="txtCantidadFlan" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasFlan" onAction="#incrementarCantidad" text="+" />
                  </HBox>
               </HBox>

               <!-- Crepe de Chocolate -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label style="-fx-font-size: 20px;" text="Crepe de Chocolate" />
                     <Label style="-fx-font-size: 16px;" text="6.00€" />
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosCrepe" onAction="#decrementarCantidad" text="-" />
                     <TextField fx:id="txtCantidadCrepe" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasCrepe" onAction="#incrementarCantidad" text="+" />
                  </HBox>
               </HBox>

               <!-- Arroz con Leche -->
               <HBox spacing="10.0">
                  <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
                  <VBox>
                     <Label style="-fx-font-size: 20px;" text="Arroz con Leche" />
                     <Label style="-fx-font-size: 16px;" text="4.00€" />
                  </VBox>
                  <HBox spacing="5.0">
                     <Button fx:id="btnMenosArroz" onAction="#decrementarCantidad" text="-" />
                     <TextField fx:id="txtCantidadArroz" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                     <Button fx:id="btnMasArroz" onAction="#incrementarCantidad" text="+" />
                  </HBox>
               </HBox>

            </VBox>
         </content>
      </ScrollPane>
   </center>
   <top>
      <Label text="Titulo" BorderPane.alignment="CENTER">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
   </top>
</BorderPane>
