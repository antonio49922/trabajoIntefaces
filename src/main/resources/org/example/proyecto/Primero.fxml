<BorderPane style="-fx-background-color: #EAD7D1;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyecto.PrimeroController">

    <!-- Menú lateral para categorías -->
    <left>
        <VBox alignment="CENTER" prefWidth="150.0" spacing="10.0">
            <Hyperlink onAction="#cambiarASegundos" text="Segundos">
                <font>
                    <Font name="Segoe Script Bold" size="14.0" />
                </font></Hyperlink>
            <Hyperlink onAction="#cambiarAPostres" text="Postres">
                <font>
                    <Font name="Segoe Script Bold" size="14.0" />
                </font></Hyperlink>
            <Hyperlink onAction="#cambiarATapas" text="Tapas">
                <font>
                    <Font name="Segoe Script Bold" size="14.0" />
                </font></Hyperlink>
            <Hyperlink onAction="#cambiarABebidas" style="-fx-font-weight: bold;" text="Bebidas">
                <font>
                    <Font name="Segoe Script" size="14.0" />
                </font></Hyperlink>
            <Hyperlink layoutX="47.0" layoutY="409.0" onAction="#cambiarAEspeciales" style="-fx-font-weight: bold;" text="Especiales">
                <font>
                    <Font name="Segoe Script" size="14.0" />
                </font>
            </Hyperlink>
        </VBox>
    </left>
    <!-- Contenido del menú -->
    <center>
        <ScrollPane fitToWidth="true" prefHeight="600.0">
            <content>
                <VBox alignment="TOP_CENTER" prefHeight="438.0" prefWidth="392.0" spacing="10.0">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>

                    <!-- Ensalada César -->
                    <HBox alignment="TOP_CENTER" spacing="10.0">
                        <VBox alignment="TOP_CENTER">
                            <Label prefHeight="30.0" prefWidth="131.0" text="Ensalada César">
                        <font>
                           <Font name="Segoe Script" size="20.0" />
                        </font></Label>
                            <Label text="8.50€" />
                        </VBox>
                        <HBox spacing="5.0">
                            <Button fx:id="btnMenosCesar" onAction="#decrementarCantidad" text="-" />
                            <TextField fx:id="txtCantidadCesar" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                            <Button fx:id="btnMasCesar" onAction="#incrementarCantidad" text="+" />
                        </HBox>
                    </HBox>

                    <!-- Ensalada Mixta -->
                    <HBox alignment="TOP_CENTER" spacing="10.0">
                        <VBox alignment="TOP_CENTER">
                            <Label text="Ensalada Mixta">
                        <font>
                           <Font name="Segoe Script" size="20.0" />
                        </font></Label>
                            <Label text="7.50€" />
                        </VBox>
                        <HBox alignment="TOP_CENTER" spacing="5.0">
                            <Button fx:id="btnMenosMixta" onAction="#decrementarCantidad" text="-" />
                            <TextField fx:id="txtCantidadMixta" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                            <Button fx:id="btnMasMixta" onAction="#incrementarCantidad" text="+" />
                        </HBox>
                    </HBox>

                    <!-- Wrap de Pollo -->
                    <HBox alignment="TOP_CENTER" spacing="10.0">
                        <VBox alignment="TOP_CENTER">
                            <Label text="Wrap de Pollo">
                        <font>
                           <Font name="Segoe Script" size="20.0" />
                        </font></Label>
                            <Label text="9.00€" />
                        </VBox>
                        <HBox spacing="5.0">
                            <Button fx:id="btnMenosWrap" onAction="#decrementarCantidad" text="-" />
                            <TextField fx:id="txtCantidadWrap" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                            <Button fx:id="btnMasWrap" onAction="#incrementarCantidad" text="+" />
                        </HBox>
                    </HBox>

                    <!-- Sándwich Club -->
                    <HBox alignment="TOP_CENTER" spacing="10.0">
                        <VBox alignment="TOP_CENTER">
                            <Label text="Sándwich Club">
                        <font>
                           <Font name="Segoe Script" size="20.0" />
                        </font></Label>
                            <Label text="9.50€" />
                        </VBox>
                        <HBox spacing="5.0">
                            <Button fx:id="btnMenosSandwich" onAction="#decrementarCantidad" text="-" />
                            <TextField fx:id="txtCantidadSandwich" alignment="CENTER" editable="false" prefWidth="40" text="0" />
                            <Button fx:id="btnMasSandwich" onAction="#incrementarCantidad" text="+" />
                        </HBox>
                    </HBox>
               <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../Recursos_Gráficos/Imagenes/Alimentos/Sanwi.png" />
                  </image>
               </ImageView>

                </VBox>
            </content>
        </ScrollPane>
    </center>
   <top>
      <Label text="Titulo" BorderPane.alignment="CENTER">
         <font>
            <Font name="Bell MT" size="36.0" />
