<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="781.0" prefWidth="577.0" style="-fx-background-color: #EAD7D1;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyecto.CarritoController">

    <!-- Encabezado igual al Menú -->
    <top>
        <Pane prefHeight="85.0" prefWidth="577.0" style="-fx-background-color: #5c4da8;" BorderPane.alignment="CENTER" />
    </top>

    <!-- Contenido Central: Resumen del Pedido -->
    <center>
        <VBox alignment="CENTER" prefHeight="420.0" prefWidth="578.0" spacing="20.0" style="-fx-border-color: #5c4da8; -fx-border-width: 2px; -fx-padding: 10px;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label fx:id="TituloResumen" text="Resumen del Pedido" textFill="#5c4da8">
                <font>
                    <Font name="Segoe Script Bold" size="25.0" />
                </font>
            </Label>

            <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="261.0" prefWidth="554.0">
                <content>
                    <VBox fx:id="resumenPedido" alignment="CENTER" prefHeight="196.0" prefWidth="553.0" spacing="10.0" style="-fx-border-color: #5c4da8; -fx-background-color: #EAD7D1;">
                    </VBox>
                </content>
            </ScrollPane>

            <Label fx:id="totalPrecio" text="Total: 0 €">
                <font>
                    <Font name="Segoe Script Bold" size="24.0" />
                </font>
            </Label>
        </VBox>
    </center>

    <!-- Botones de Confirmar y Seguir Comprando -->
    <bottom>
        <HBox alignment="CENTER" prefHeight="112.0" prefWidth="578.0" spacing="20" BorderPane.alignment="CENTER">
            <ImageView fitHeight="45.0" fitWidth="35.0" onMouseClicked="#cambiarAIngles" pickOnBounds="true" preserveRatio="true" translateX="-80.0" translateY="20.0">
                <image>
                    <Image url="@../../../Recursos_Gráficos/Imagenes/Recursos/uk-flag.442x512.png" />
                </image></ImageView>
            <ImageView fitHeight="45.0" fitWidth="35.0" layoutX="61.0" layoutY="512.0" onMouseClicked="#cambiarAEspanol" pickOnBounds="true" preserveRatio="true" translateX="-80.0" translateY="20.0">
                <image>
                    <Image url="@../../../Recursos_Gráficos/Imagenes/Recursos/uk-flag.442x512.png" />
                </image>
            </ImageView>
            <Button fx:id="btnSeguirComprando" onAction="#seguirComprando" style="-fx-background-color: transparent;" text="Seguir Comprando" textFill="#5c4da8" translateX="-65.0">
                <font>
                    <Font name="Segoe Script Bold" size="14.0" />
                </font>
            </Button>

            <Button fx:id="confirmarPedido" onAction="#confirmarPedido" style="-fx-background-color: #5c4da8;" text="Confirmar Pedido" textFill="WHITE" translateX="-65.0">
                <font>
                    <Font name="Segoe Script Bold" size="14.0" />
                </font>
            </Button>
        </HBox>
    </bottom>

    <!-- Imagen de fondo, similar a la del menú -->
    <top>
        <ImageView fitHeight="106.0" fitWidth="577.0" pickOnBounds="true" BorderPane.alignment="TOP_RIGHT">
            <image>
                <Image url="@../../../Recursos_Gráficos/Imagenes/Recursos/rural-landscape-village-sketch-f.png" />
            </image>
        </ImageView>
    </top>
</BorderPane>
